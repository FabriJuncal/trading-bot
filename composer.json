{
    "name": "fabrijuncal/trading-bot",
    "description": "Bot de trading automatizado para criptomonedas",
    "type": "project",
    "version": "1.0.0",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "ccxt/ccxt": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable"
}
